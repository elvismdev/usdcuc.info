<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
<head>
	<title>{% block title %}{{ platform_name }}{% endblock %}</title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />

	{% block stylesheets %}
		{{ encore_entry_link_tags('app') }}
	{% endblock %}
</head>
<body class="is-preload">

	{# GH Corner #}
	{% include 'components/gh-corner.html.twig' %}

	{% block body %}{% endblock %}

		<!-- Footer -->
		<footer id="footer">
			<div class="icons-wrapper">
				<ul class="icons">
					<li><a href="#" class="icon brands fa-twitter"><span class="label">Twitter</span></a></li>
					<li><a href="{{ gh_repo_url }}" class="icon brands fa-github"><span class="label">GitHub</span></a></li>
					<li><a href="mailto:hi@usdcuc.info" class="icon fa-envelope"><span class="label">Email</span></a></li>
					<li><a data-toggle="collapse" href="#collapseHIW" role="button" aria-expanded="false" aria-controls="collapseHIW">{{ 'how_it_works'|trans }} <i class="fas fa-question"></i></a></li>
					{# <li><a href="{{ path('get_average_price') }}">API</a></li> #}
				</ul>
			</div>

			{# How it Works Collapsible panel #}
			<div class="hiw-collapsed card">
				<div class="collapse" id="collapseHIW">
					<div class="card-body inner-shadow">
						{{ 'how_it_works_desc'|trans|raw }}
					</div>
				</div>
			</div>

			<div class="copyright-wrapper">
				<ul class="copyright">
					<li>&copy; <span id="current-year"></span> <a href="{{ path('home') }}">{{ platform_name }}</a></li>
					<li>Dev: <a target="_blank" href="https://twitter.com/n3rdh4ck3r">@n3rdh4ck3r</a></li>
					<li>{{ 'copyright_design'|trans }}: <a target="_blank" href="http://html5up.net">HTML5 UP</a></li>
				</ul>
			</div>
		</footer>


		{# Modal #}
		{# {% include 'components/modal.html.twig' %} #}


		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
			<script type="text/javascript">
				var d = new Date();
				var currentYear = d.getFullYear();
				document.getElementById("current-year").innerHTML = currentYear;
			</script>
		{% endblock %}
	</body>
	</html>
